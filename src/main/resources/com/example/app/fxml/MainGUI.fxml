<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.app.controllers.MainGUIController"
           prefWidth="600" prefHeight="400">

    <VBox spacing="20" alignment="CENTER">
        <Label text="Welcome to MyTeacher - Student Management System"/>
        <HBox spacing="10" alignment="CENTER">
            <Button text="Manage Students" onAction="#handleManageStudents"/>
            <Button text="Manage Courses" onAction="#handleManageCourses"/>
            <Button text="View Reports" onAction="#handleViewReports"/>
        </HBox>
    </VBox>

</StackPane>

